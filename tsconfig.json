{
  "compilerOptions": {
    "allowJs": false,
    "target": "ES2017",
    "module": "ES2022",
    "lib": ["es2022"],
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "incremental": true,
    "isolatedModules": true,
    "outDir": "tmp",
    "noEmit": true
  },
  "files": ["./.eslintrc.json", "./prettier.config.mjs"],
  "include": ["./**/*.ts", "./**/*.tsx", "./*.d.ts", "./*.config.ts"]
}
